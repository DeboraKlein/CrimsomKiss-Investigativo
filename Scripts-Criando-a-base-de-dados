-- Criando Base de Dados
CREATE DATABASE BatomInvestigation;
GO
USE BatomInvestigation;
GO

-- Tabela de Vendas
CREATE TABLE Vendas (
    IdVenda INT PRIMARY KEY,
    DataVenda DATE,
    Canal VARCHAR(50), -- 'Online' ou 'Loja F√≠sica'
    Produto VARCHAR(100),
    Quantidade INT,
    ValorTotal DECIMAL(10,2)
);

-- Tabela de Avalia√ß√µes
CREATE TABLE Avaliacoes (
    IdAvaliacao INT PRIMARY KEY,
    Produto VARCHAR(100),
    Nota INT,
    Comentario TEXT,
    DataAvaliacao DATE,
    IPCliente VARCHAR(50)
);

-- Tabela de Estoque
CREATE TABLE Estoque (
    IdLoja INT,
    Produto VARCHAR(100),
    QuantidadeEstoque INT,
    StatusSistema VARCHAR(20) -- 'Dispon√≠vel', 'Zerado', etc.
);

-- Tabela de Campanhas de Marketing
CREATE TABLE CampanhasMarketing (
    IdCampanha INT PRIMARY KEY,
    Produto VARCHAR(100),
    Influencer VARCHAR(100),
    DataInicio DATE,
    DataFim DATE,
    ROI DECIMAL(5,2),
    Status VARCHAR(50) -- 'Ativa', 'Pausada', etc.

-- üß± Criando a Tabela de Logs
-- Essa tabela vai guardar informa√ß√µes como o tipo de alerta, quando aconteceu e detalhes 
-- adicionais.

CREATE TABLE LogAlertas (
    IdAlerta INT PRIMARY KEY IDENTITY(1,1),
    TipoAlerta VARCHAR(100),
    DataAlerta DATETIME DEFAULT GETDATE(),
    Detalhes TEXT
);

SELECT Status, DataFim FROM CampanhasMarketing WHERE Influencer = 'Duda Glow';

